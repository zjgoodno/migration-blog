.banner
  top: 0
  left: 0
  width: 100%
  height: banner-height
  background: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(images/banner.jpg)
  background-size: cover
  background-position: bottom
  z-index: -1
  filter: grayscale(50%)
  display: flex
  flex-direction: column
  align-items: center



h1
  font-size: 64px
  text-align: center
  color white
  text-shadow: 0.5px 0.5px 3px black;
  margin-top: 65px


a
  font-size 20px
  color white

.main-nav
  background-color: rgba(0, 0, 0, 0.2)
  width 100%

$nav-link
  float: left
  color: #fff
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  padding: 15px 15px
  &:hover
    opacity: 1

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

